[user]
	name = kepford
	email = bob@bobkepford.com
[github]
  user = kepford
  token = 33e0eb22297ecca91206cc352f977c83
[core]
  editor = vim
	excludesfile = /Users/kepford/.gitignore
	quotepath = false
[difftool]
  tool = Kaleidoscope
	prompt = false
[merge]
	tool = Kaleidoscope
[color]
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color]
    ui = true
[push]
  default = current
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    #Show modified files in last commit:
    dl = "!git ll -1"
    #Show a diff last commit:
    dlc = diff --cached HEAD^
    lg = log -p
    logm = log --author="kepford" --decorate
    lolm = log --author="kepford" --graph --decorate --pretty=oneline --abbrev-commit
    lol = log --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    lola = log --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --all
    ls = ls-files
    #List commits showing changed files is invoked with git ll and looks like this:
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    #List oneline commits showing dates:
    lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    #List oneline commits showing relative dates:
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    #stash
    sl = stash list
    sa = stash apply
    ss = stash save
  datetag = !git tag `date "+%Y_%m_%d_%H%M"`
  unstage = reset HEAD
  diffall = diff HEAD
  undolast = reset --soft Head^
  diffstaged = diff --staged
  filelog = log --oneline --no-merges --
  fl = log -u
[apply]
  whitespace = nowarn
[branch]
  autosetuprebase = always
[dropbox]
  folder = ~/Dropbox/repos
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool]
	keepBackup = true
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[pull]
	rebase = true
